<%# title %>
<h1 class= 'pt-2' style='text-align:center'>Your dog(s)</h1>
<hr style="width:75%; height:4px">
<div class='d-flex justify-content-center'>
  <%= link_to "Add a dog", new_dog_path, class: "btn btn-primary btn-lg text-white"%>
</div>

<%# Card grid %>
<div class='d-flex justify-content-center my-4'>
  <div class='card-grid'>
    <% @dogs.each do |dog| %>
      <%= link_to dog_path(dog) do %>
        <div class='grid-item'>
          <%= render 'shared/dog_card_owner', dog: dog %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
